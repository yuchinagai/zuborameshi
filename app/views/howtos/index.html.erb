<div class="col-lg-12 col-md-12 col-sm-12 mb-3 text-center">
<h2><%= t '.title' %></h2>
  <div class="row">
    <% @howtos.each do |howto| %>
      <div class="col-md-4">
        <% if howto.url.blank? && howto.image.attached? %>
          <%= image_tag howto.image.variant(resize: "300x300"), class: "img-thumbnail" %>
        <% elsif howto.image.attached? %>
        <a href="<%= howto.url %>" rel="ar">
          <%= image_tag howto.image.variant(resize: "300x300"), class: "img-thumbnail" %>
        </a>
        <% else %>
          <%= image_tag "img_warning.png", class: "img-thumbnail" %>
        <% end %>
        <p>
          <%= link_to howto.title, howto_path(howto) %>
        </p>
      </div>
    <% end %>
  </div>
</div>
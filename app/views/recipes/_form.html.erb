<%= form_with model: recipe, local: true do |form| %>
  <!-- 変数をrecipeをobjという名前で渡します。他のモデルのエラー内容を表示する可能性があるので、汎用性のあるobjという名前にしています。 -->
  <%= render "shared/errors", obj: recipe %>
  <div class="form-group">
    <%= form.label :レシピ名 %>
    <%= form.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :材料 %>
    <%= form.text_area :material, rows: 5, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :調理方法 %>
    <%= form.text_area :body, rows: 5, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :ワンポイントアドバイス %>
    <%= form.text_field :point, class: "form-control" %>
  </div>
  <%= form.submit class: "btn btn-primary" %>
<% end %>
<div class="col-md-10 offset-md-1 mt-5">
  <div class="row">
    <div class="col-md-4 mb-4">
      <!-- ビューヘルパー利用 -->
      <%= show_recipe_image @recipe %>
      <% if user_signed_in? %>
        <div class="buttons row mt-4">
          <div class="button1"><%= render 'likes/like', recipe: @recipe %></div>
          <div class="button2"><%= render 'hards/hard', recipe: @recipe %></div>
        </div>
      <% else %>
        <div class="buttons row mt-4">
          <div class="button1"><div class = "iine_button">いいね <%= @recipe.likes_count %></div></div>
          <div class="button2"><div class = "muzukasiine_button">むずかしいね <%= @recipe.hards_count %></div></div>
        </div>
      <% end %>
    </div>
    <div class="col-md-8">
      <h2><%= @recipe.title %></h2>
        <hr>
        <b><%= t '.category' %>：</b><%= @recipe.category&.name %>
        <hr>
        <b><%= t '.material' %>：</b><%= simple_format @recipe.material %>
        <hr>
        <b><%= t '.body' %>：</b><%= simple_format @recipe.body %>
    </div>
  </div>
  <b><%= t '.point' %>：</b><%= simple_format @recipe.point %>
  <hr>
  <%= render partial: "reviews/review", collection: @recipe.reviews %>
  <% if user_signed_in? %>
    <%= link_to t(".review_new"), new_recipe_review_path(@recipe), class: "btn btn-info" %>
  <% end %>
  <%= link_to t(".return"), recipes_path, class: "btn btn-secondary" %>
</div>

<div class="message">
<a>パスタ
<span class="remark">パスタは最安値500g90円。パスタを手に握って100円玉より大きいくらいが一人前150gの目安</span>
</a>
</div>
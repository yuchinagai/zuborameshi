<% @recipes.each do |recipe| %>
  <div class="col-lg-4 col-md-4 col-sm-6 mb-3 text-center">
    <%= show_recipe_image recipe %>
    <h4 class="mt-2"><%= link_to recipe.title, recipe_path(recipe) %></h4>
    <hr>
    <p>
      <b><%= link_to "#{t '.category'}", categories_path %></b><br>
      <%= link_to "#{recipe.category&.name}", category_path("#{recipe.category_id}") %>
    </p>
    <hr>
    <p>
      <b><%= t ".point" %></b><br>
      <%= t (recipe.point) %>
    </p>
    <hr>
      <div class="buttons row mt-4 text-center">
        <div class="button1 iine_button message">
          <a>😋 <%= recipe.likes_count %><span class="remark">いいね！</span></a>
        </div>
        <div class="button2 muzukasiine_button message2">
          <a>😵 <%= recipe.hards_count %><span class="remark">むずかしいね！</span></a>
        </div>
        <p class="padding"></p>
      </div>
  </div>
<% end %>
<div class="col-3 right">
  <%= link_to t(".return"), :back, class: "btn btn-secondary ml-2" %>
</div>
<%= render partial: 'shared/carousel' %>
<% @recipes.each do |recipe| %>
  <div class="col-lg-3 col-md-4 col-sm-6 mb-3">
    <%= show_recipe_image recipe %>
    <h4 class="mt-2"><%= link_to recipe.title, recipe_path(recipe) %></h4>
    <p><b><%= t '.category' %>：</b><%= recipe.category&.name %></p>
    <hr>
    <b><%= t '.material' %></b>
    <div><%= simple_format recipe.material %></div>
    <hr>
    <p><b><%= t ".point" %></b><br>
    <%= t (recipe.point) %></p>
    <hr>
    <p><div class = "iine_button">いいね <%= recipe.likes_count %></div></p>
    <p><div class = "muzukasiine_button">むずかしいね <%= recipe.hards_count %></div></p>
  </div>
<% end %>
<div class="col-12">
  <%= paginate @recipes %>
</div>
<%= form_with model: [recipe, review], local: true do |form| %>
  <%= render "shared/errors", obj: review %>
  <div class="form-group">
    <%= form.label :evaluation %>
    <%= form.select :evaluation, Review.evaluations.keys.map {|k| [k, k]}, {}, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label t(".body") %>
    <%= form.text_area :body, rows: 5, class: "form-control" %>
  </div>
  <%= form.submit class: "btn btn-primary" %>
  <%= link_to t(".back"), :back, class: "btn btn-secondary" %>
<% end %>